import java.util.Scanner;
public class Tarea2{
    public static void main(String[] args) {
        
        Scanner scanner = new Scanner(System.in);
        System.out.println("Ingresa tu nombre, profesión y nacionalidad separados por espacios sin comas: ");
        String input = scanner.nextLine();

        String[] nombres = input.split(" ");
        String nombre = nombres[0];
        String profesion = nombres[1];
        String nacionalidad = nombres[2];

        System.out.println("Nombre: "+nombre);
        System.out.println("Profesión: "+profesion);
        System.out.println("Nacionalidad: "+nacionalidad);
    }
}
//Intente hacerlo de la manera vista en clase, pero no me funcionaba el codigo dado que decia que el metodo nextLine estaba indefinido por el tipo Scanner