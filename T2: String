import java.util.Scanner;
public class Tarea2{
    public static void main(String[] args) {
        
        Scanner scanner = new Scanner(System.in);
        System.out.println("Ingresa tu primer nombre, profesión y nacionalidad separados por espacios sin comas: ");
        String input = scanner.nextLine();

        String[] nombres = input.split(" ");
        String nombre = nombres[0];
        String profesion = nombres[1];
        String nacionalidad = nombres[2];

        String a = nombre.toUpperCase();
        String b = profesion.toUpperCase();
        String c = nacionalidad.toUpperCase();

        System.out.println("Nombre: "+a);
        System.out.println("Profesión: "+b);
        System.out.println("Nacionalidad: "+c);
    }
}
//Intente hacerlo de la manera vista en clase, pero no me funcionaba el codigo dado que decia que el metodo nextLine estaba indefinido por el tipo Scanner